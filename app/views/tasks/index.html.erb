<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <a href="http://localhost:3000/tasks/<%=task[:id]%>"><li><%= task[:title] %></li></a>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<a href="http://localhost:3000/tasks/new"> add a new task</a>



